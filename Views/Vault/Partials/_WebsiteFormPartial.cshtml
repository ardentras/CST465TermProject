@*Javascript verification doesn't work without this here for some reason*@
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.1/jquery.validate.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.js"></script>

@model final.Models.Website

<div id="note-partial" class="create-form card">
    <h4 class="card-title"><strong>Website</strong></h4>
    <div class="card-body">
        <form asp-controller="Vault" asp-action="CreateWebsite">
            @Html.AntiForgeryToken()
            <em><label asp-for="Name"></label></em>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span><br />
            <em><label asp-for="URL"></label></em>
            <input asp-for="URL" class="form-control" />
            <span asp-validation-for="URL"></span><br />
            <em><label asp-for="Username"></label></em>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span><br />
            <em><label asp-for="PasswordValue"></label></em>
            <input asp-for="PasswordValue" class="form-control" />
            <span asp-validation-for="PasswordValue"></span><br />
            <input hidden asp-for="Tab" value="1" />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>