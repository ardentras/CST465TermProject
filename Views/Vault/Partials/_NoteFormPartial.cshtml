@model final.Models.Note

<div id="note-partial" class="create-form card">
    <h4 class="card-title"><strong>Note</strong></h4>
    <div class="card-body">
        <form asp-controller="Vault" asp-action="CreateNote">
            @Html.AntiForgeryToken()
            <em><label asp-for="Name"></label></em>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span><br />
            <em><label asp-for="Text"></label></em>
            <textarea rows="10" asp-for="Text" class="form-control"></textarea>
            <span asp-validation-for="Text"></span><br />
            <input hidden asp-for="Tab" value="0" />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>