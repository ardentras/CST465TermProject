@model final.Models.Password

<h1>View Password</h1>
<div class="btn-group" role="group">
    <a class="btn btn-info back-btn" asp-controller="Vault" asp-action="Index">&larr; Go back</a>

    <form asp-action="Edit" asp-controller="Password">
        <input hidden value="@Model.ID" asp-for="ID" />
        <button type="submit" class="btn btn-warning">Edit</button>
    </form>
</div>
<div class="saveditem-display">
    <strong>Name:</strong> @Model.Name<br />
    <strong>Username: </strong>@Model.Username<br />
    <strong>Password: </strong><span class="password-disp">@System.Text.Encoding.ASCII.GetString(Convert.FromBase64String(Model.PasswordValue))</span><br />
</div>